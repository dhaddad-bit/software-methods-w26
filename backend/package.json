{
  "name": "social-scheduler-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "coverage:check-regression": "node ./scripts/checkCoverageRegression.js",
    "test:coverage:ci": "npm run test:coverage && npm run coverage:check-regression",
    "cleanup:dry-run": "node ./maintenance/cleanup.js --dry-run",
    "cleanup:apply": "node ./maintenance/cleanup.js --apply --confirm APPLY_CLEANUP",
    "outbox:worker": "node ./outbox/run_worker.js"
  },
  "dependencies": {
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.19.0",
    "googleapis": "^105.0.0",
    "pg": "^8.11.3",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
